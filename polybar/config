[module/volume]
type = internal/pulseaudio

#format-volume-overline = ${colors.enable}
#format-muted-overline = ${colors.disable}

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = "<ramp-volume><label-volume>"

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
format-muted = "<label-muted>"

; Available tokens:
;   %percentage% (default)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = "üîá %percentage:3%%  "
label-muted-foreground = ${colors.foreground}
label-muted-background = ${colors.foreground-alt}

label-volume = " %percentage:3%%  "
label-volume-foreground = ${colors.foreground}
label-volume-background = ${colors.foreground-alt}

; Only applies if <ramp-volume> is used
ramp-volume-0 = "üîà"
ramp-volume-0-foreground = ${colors.foreground}
ramp-volume-0-background = ${colors.foreground-alt}
ramp-volume-1 = üîâ
ramp-volume-1-foreground = ${colors.foreground}
ramp-volume-1-background = ${colors.foreground-alt}
ramp-volume-2 = üîä
ramp-volume-2-foreground = ${colors.foreground}
ramp-volume-2-background = ${colors.foreground-alt}

; If defined, it will replace <ramp-volume> when
; headphones are plugged in to `headphone_control_numid`
; If undefined, <ramp-volume> will be used for both
; Only applies if <ramp-volume> is used
;ramp-headphones-0 =

bar-volume-width = 7
bar-volume-foreground-0 = #f00
bar-volume-foreground-1 = #f94
bar-volume-foreground-2 = #afa
bar-volume-gradient = true
